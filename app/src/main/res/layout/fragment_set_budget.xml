<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/toolbar_container"
    tools:context="me.limantara.eatit.fragment.FragmentSetBudget">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/card_background">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/budget_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans_serif_thin"
                    android:text="Budget allowance in USD"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="16sp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_below="@id/budget_info"
                    android:id="@+id/budget_info_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans_serif_thin"
                    android:text="Excluding tips and tax"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16sp"
                    android:layout_marginBottom="16dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/budget_value"
                    android:layout_below="@id/budget_info_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans_serif_light"
                    android:text="3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16sp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/primary"
                    android:textSize="112sp" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="24dp"
                    android:id="@+id/seekBar"
                    android:layout_below="@+id/budget_value"
                    android:max="43" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</FrameLayout>
